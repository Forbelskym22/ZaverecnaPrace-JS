<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Profil uživatele</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<%- include('layout/header') %>

<body class="bg-light">
  <div class="container py-5">

    <!-- Uživatelský profil -->
    <div class="card mb-4 shadow-sm">
      <div class="card-body d-flex align-items-center">
        <img src="https://via.placeholder.com/80" class="rounded-circle me-3" alt="Profilový obrázek">
        <div>
          <h5 class="card-title mb-0"><%= user.name %></h5>
          <small class="text-muted"><%= user.email %></small>
        </div>
      </div>
    </div>

    <!-- Poznámky -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4>Moje poznámky</h4>
      <a href="/notes/new" class="btn btn-primary">+ Nová poznámka</a>
    </div>

    <div class="row">
      <% notes.forEach(note => { %>
        <div class="col-md-6 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= note.title %></h5>
              <p class="card-text"><%= note.content %></p>
              <div class="d-flex justify-content-end">
                <a href="/notes/edit/<%= note.id %>" class="btn btn-sm btn-outline-secondary me-2">Upravit</a>
                <form action="/notes/delete/<%= note.id %>" method="POST" onsubmit="return confirm('Opravdu smazat?')">
                  <button type="submit" class="btn btn-sm btn-outline-danger">Smazat</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

  </div>
</body>
</html>
